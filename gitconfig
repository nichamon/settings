[core]
	editor = vim
[push]
	default = simple
[alias]
	st = status -uno
	logn = log --decorate --oneline
	logl = log --decorate --stat
	logs = log --pretty=format:'%C(yellow)%h %Cred%d%  %Cblue%s%Creset' --stat
	logss = log --pretty=oneline
	hist = log -p
	br = branch
	chk = checkout
	delme = branch -m del-me
	del = branch -d
	new = checkout -b
	fwd = merge --ff-only
	gr = log --graph --decorate
	contain = branch --contains
	rcontain = branch -r --contains
	fetchall = !git fetch origin &&  git fetch mon-github && git fetch upstream && git fetch github && :
	fetchmon = !git fetch origin && git fetch mon-github && :
